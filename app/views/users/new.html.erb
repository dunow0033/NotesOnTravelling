<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <div>
    <h2>
      <%= pluralize(@user.errors.count, "error") %>:<br>
    </h2>

 <ul style="list-style-type: none;">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
    <%= f.text_field :name, placeholder: "Name" %>
    <br><br>
    <%= f.password_field :password, placeholder: "Password" %>
    <br><br>
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation" %><br><br>

    <%= f.submit "Create User" %>
<% end %>