<h1>All Destination Notes:</h1>

<% @notes.each do |note| %>
    <fieldset>
        <strong><%= note.user.name %></strong> made a comment on <%= note.destination.name %>:
        <br>
        <br>
        <%= note.content %>
        <%= link_to "Edit Comment", edit_note_path(note)  if note.user == current_user %>
        <%= link_to "Delete", note_path(note), data: { confirm: "Are you sure you want to delete this note?" }, method: :delete, class: 'btn btn-mini btn-danger'  if note.user == current_user %>
    </fieldset>
<% end %>