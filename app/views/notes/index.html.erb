<% if @notes.empty? %>
        <h1>No Notes created yet!!  Make some destinations, then make some notes!!</h1>
<% else %>
        <% if @destination.nil? %>
                <h1>All Destination Notes:</h1>

                <% @notes.each do |note| %>
                        <strong><%= note.user.name %></strong> made a comment on <%= note.destination.name %>:
                        <br>
                        <br>
                        <%= note.content %>
                        <br>
                        <br> 
                        <% if note.user == current_user %>
                                <%= link_to "Edit Comment", edit_note_path(note) %>
                                <%= button_to "Delete Comment", note, method: :delete, :onclick => "return confirm('Are you sure you want to delete this note?')" %>
                        <% end %>
                        <br>
                        <br>
                <% end %>
        <% else %>
                <% if @notes == "none" %>
                        <h1>No notes for <%= @destination.name %> yet!!</h1>
                <% else %>
                        <h1>Notes for <%= @destination.name %>:</h1>   
                        <% @notes.each do |note| %>            
                                <strong><%= note.user.name %></strong> made a comment on <%= note.destination.name %>:
                                <br>
                                <br>
                                <%= note.content %>
                                <br>
                                <br>
                                <% if note.user == current_user %>
                                        <%= link_to "Edit Comment", edit_note_path(note) %>
                                        <%= button_to "Delete Comment", note, method: :delete, :onclick => "return confirm('Are you sure you want to delete this note?')" %>
                                <% end %>
                                <br>
                                <br>
                        <% end %>
                <% end %>
        <% end %>
<% end %>